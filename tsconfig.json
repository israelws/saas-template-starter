{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@saas-template/shared": ["packages/shared/src"],
      "@saas-template/shared/*": ["packages/shared/src/*"],
      "@saas-template/ui": ["packages/ui/src"],
      "@saas-template/ui/*": ["packages/ui/src/*"]
    }
  },
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/ui" },
    { "path": "./apps/backend" },
    { "path": "./apps/admin-dashboard" },
    { "path": "./apps/frontend" }
  ],
  "exclude": ["node_modules", "dist", "build", ".next"]
}